<?xml version="1.0" encoding="UTF-8"?>
<mapping-configuration>
	<!-- 流程运行变量表 -->
	<table name="BPM_RU_VARIABLE" class="com.douglei.bpm.module.runtime.variable.Variable" createMode="create" strict="true">
		<columns>
			<column name="ID" property="id" dataType="number" primaryKey="true" length="10" />
			<column name="PROCINST_ID" property="procinstId" dataType="char" length="36" nullable="false"/>
			<column name="TASK_ID" property="taskId" dataType="number" length="10" />
			<column name="SCOPE" property="scope" dataType="string" length="9" nullable="false"/>
			<column name="NAME" property="name" dataType="nstring" length="150" nullable="false"/>
			<column name="DATA_TYPE" property="dataType" dataType="string" length="8" nullable="false"/>
			<column name="STRING_VAL" property="stringVal" dataType="nstring" length="2000" />
			<column name="NUMBER_VAL" property="numberVal" dataType="number" length="20" precision="4" />
			<column name="DATE_VAL" property="dateVal" dataType="datetime" />
			<column name="OBJECT_VAL" property="objectVal" dataType="blob" />
		</columns>
		<primaryKeyHandler type="sequence"></primaryKeyHandler>
	</table>
</mapping-configuration>