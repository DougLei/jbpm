<?xml version="1.0" encoding="UTF-8"?>
<bpm-configuration>
	<process code="vocation" version="v2020" name="请假" title="#{name}的请假申请">
		<!-- 开始事件, 一个流程中只能有一个开始 -->
		<startEvent id="startEvent" name="开始"></startEvent>
		<!-- 结束事件, 一个流程中可以有多个结束 -->
		<endEvent id="endEvent" name="结束"></endEvent>
		
		<!-- 用户任务 -->
		<userTask id="userTask1" name="员工发起申请"></userTask>
		<userTask id="userTask2" name="经理审批"></userTask>
		<userTask id="userTask3" name="老板审批"></userTask>
		
		<!-- 连线, 可配置条件 -->
		<flow id="flow1" source="startEvent" target="userTask1" />
		<flow id="flow2" source="userTask1" target="userTask2">
			<conditionExpr><![CDATA[ #{day <= 3} ]]></conditionExpr>
		</flow>
		<flow id="flow4" source="userTask1" target="userTask3">
			<conditionExpr><![CDATA[ #{day > 3} ]]></conditionExpr>
		</flow>
		<flow id="flow3" source="userTask2" target="userTask3" />
		<flow id="flow5" source="userTask3" target="endEvent" />
	</process>
	
	<!-- 配置流程图的结构, 主要就是记录画布的长宽，以及各个节点的坐标，长宽等 -->
	<process-img>
	</process-img>
</bpm-configuration>