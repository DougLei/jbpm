<?xml version="1.0" encoding="UTF-8"?>
<bpm-configuration>
	<!-- 
		流程配置结构, 核心主要包括以下四种元素:
		1. 连线
		2. 任务, 包含两种类型:
			2.1. 手动任务, 需要用户手动处理, 来推动流程流转, 主要是用户任务
			2.2. 自动任务, 可以自行推动流程流转, 例如子流程任务, SQL脚本任务, 定时任务, 邮件任务等
		3. 网关: 并行网关, 排他网关, 包容网关 
		4. 事件: 开始事件, 结束事件
	-->
	<process code="编码, 唯一" version="用户自定义的版本" name="流程名称, 可以不配置, 如果不配置则使用code:version" title="标题表达式, 根据表达式生成实例的标题, 如果不配置, 则默认标题使用name" pageID="全局页面标识">
		<!-- 开始事件, 一个流程中只能有一个开始 -->
		<startEvent id="startEvent" name="">
			<!-- 启动策略, 即流程的启动条件, 目前考虑的策略包括: 启动的人, 启动的时间(区间); 不配置表示支持无条件启动, 任何人在任何时候都可以发起流程 -->
			<policy expr="启动策略的表达式"></policy>
		</startEvent>
		<!-- 结束事件, 一个流程中可以有多个结束 -->
		<endEvent id="endEvent1" name=""></endEvent>
		
		<!-- 用户任务 -->
		<userTask id="userTask1" name="任务名称" pageID="属于任务的页面标识, 优先级高于全局页面标识" timeLimit="办理时限的表达式, 设置当前用户任务需要在多长时间内办理, 不配置则没有时限约束, 这里的表达式还要体现出工作日/自然日">
			<!-- 当前任务候选人相关配置 -->
			<candidate>
				<!-- 候选人指派策略(从上一环节进入当前环节时指派候选人的策略) -->
				<assignPolicy mode="指派候选人模式(只能选择一个候选人, 可以选择多个候选人)" expr="指派候选人的表达式, 多个表达式用;(分号)分隔开"></assignPolicy>
				<!-- 候选人办理策略(在当前环节办理人的办理策略) -->
				<handlePolicy mode="办理模式(单人办理, 多人按百分比办理, 多人按人数办理) / 是串行还是并行办理" modeValue="办理模式对应的配置值(百分比, 人数)" strict="是否需要强制表态, 默认值为false"></handlePolicy>
			</candidate>
			
			<!-- 在当前任务时, 可以执行的操作 -->
			<option type="saveForm" name="保存表单"></option>
			<option type="toInitiator" name="退回发起人"></option>
			<option type="toPreLink" name="退回上一环节"></option>
			<option type="sendCopy" name="抄送">
				<candidate></candidate>
			</option>
			<option type="transfer" name="转办">
				<candidate></candidate>
			</option>
			<option type="assist" name="协办">
				<candidate></candidate>
			</option>
			<option type="extension" name="延长办理" times="可申请延长办理的次数, 默认值为1" maxDays="一次最多几天, 默认值为1" dayType="延长天数是工作日还是自然日, 默认值为工作日" ></option>
			<option type="tracking" name="流程跟踪"></option>
			<option type="urging" name="催办" moment="可催办的时机表达式, 例如在逾期后催办, 在提交的一天后催办等, 尽量也体现出工作日和自然日"></option><!-- 可配置在何时出现催办按钮 -->
			<option type="withdraw" name="撤回" times="0"></option><!-- 当用户提交后, 如果发现提交的有问题, 还可以自主选择撤回, 重新编辑后重新提交; times设置可以撤回的次数, 默认值为0, 配置的值在小于1时, 都表示不限制次数 -->
			<!-- 流程挂起, 终止, 激活, 均放到流程实例管理界面, 做为流程管理员的功能提供 -->
						
			<!-- 监听器, 按照配置的顺序依次执行 -->
			<listeners>
				<listener type="pre" value="" /><!-- 前置 -->
				<listener type="post" value="" /><!-- 后置 -->
			</listeners>
		</userTask>
		
		<!-- 子流程任务, 暂不实现 -->
		<processTask id="processTask1" name="">
			<process></process>
		</processTask>
		<!-- SQL脚本任务, 暂不实现 -->
		<sqlTask id="sqlTask1" name=""></sqlTask>
		<!-- 定时任务, 暂不实现 -->
		<timerTask id="timerTask1" name="" cronExpr=""></timerTask>
		<!-- 邮件任务, 暂不实现 -->
		<emailTask id="emailTask1" name=""></emailTask>
		
		<!-- 并行网关 -->
		<parallelGateway id="parallelGateway1" name=""></parallelGateway>
		<!-- 排他网关 -->
		<exclusiveGateway id="exclusiveGateway1" name=""></exclusiveGateway>
		<!-- 包容网关 -->
		<inclusiveGateway id="inclusiveGateway1" name=""></inclusiveGateway>
		
		<!-- 连线, 可配置条件 -->
		<flow id="flow1" name="" source="startEvent1" target="userTask1" conditionExpr="配置比较表达式, 根据表达式决定是否会走该flow" order="0, 默认值为0, 排序, 当同一个source引出多条线, 通过order进行排序"></flow>
	</process>
	
	<!-- 配置流程图的结构, 主要就是记录画布的长宽，以及各个节点的坐标，长宽等 -->
	<process-img>
	</process-img>
</bpm-configuration>