<?xml version="1.0" encoding="UTF-8"?>
<mapping-configuration>
	<!-- 流程定义表 -->
	<table name="BPM_RE_PROCDEF" class="com.douglei.bpm.module.repository.definition.ProcessDefinition" forceCreateMode="create">
		<columns>
			<column name="ID" property="id" dataType="integer" primaryKey="true" length="20" />
			
			<column name="REF_TYPE_ID" property="refTypeId" dataType="integer" length="20" nullable="false" defaultValue="0"/>
			<column name="NAME" property="name" dataType="nstring" length="50" nullable="false" />
			<column name="CODE" property="code" dataType="string" length="50" nullable="false" />
			<column name="VERSION" property="version" dataType="string" length="50" nullable="false" />
			<column name="SUBVERSION" property="subversion" dataType="integer" length="4" defaultValue="0" nullable="false" />
			<column name="CONTENT_" property="content" dataType="clob" nullable="false" />
			<column name="SIGNATURE" property="signature" dataType="string" length="32" nullable="false" />
			<column name="STATE" property="state" dataType="integer" length="1" defaultValue="0" nullable="false"/>
			<column name="DESCRIPTION" property="description" dataType="nstring" length="150" />
			
			<column name="CREATE_USER" property="createUser" dataType="char" length="50" />
			<column name="CREATE_DATE" property="createDate" dataType="date" />
			<column name="UPDATE_USER" property="updateUser" dataType="char" length="50" />
			<column name="UPDATE_DATE" property="updateDate" dataType="date" />
		</columns>
		<primaryKeyHandler type="sequence"></primaryKeyHandler>
	</table>
</mapping-configuration>